<div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
  <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">
    Forgot your password?
  </h2>

  <p class="text-sm text-gray-600 text-center mb-6">
    Enter your email and weâ€™ll send you instructions to reset your password.
  </p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, turbo: false }) do |f| %>
    <%= render "admin/users/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        required: true,
        class: "w-full rounded-lg border-gray-300 border border-gray-500 px-2 py-2" %>
    </div>

    <%= f.submit "Send reset instructions",
      class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-lg font-medium
              hover:bg-indigo-700 transition duration-200" %>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
